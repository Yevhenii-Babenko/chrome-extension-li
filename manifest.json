{
    "manifest_version": 2,
    "name": "Test background scripts works",
    "description": "This extension created for testing cbackground scripts works",
    "version": "1.0",
    "web_accessible_resources": [
        "*.png"
    ],
    "browser_action": {
        "default_icon": "icon.png",
        "default_popup": "popup.html"
    },
    "content_scripts": [
        {
            "matches": [
                "*://*.linkedin.com/*"
            ],
            "js": [
                "jquery.js",
                "content/content.js",
                "content/liUserPage.js"
            ]
        }
    ],
    "background": {
        "page": "background.html",
        "scripts": [
            "jquery.js",
            "background/background.js",
            "background/background-state.js",
            "background/background-listener.js"
        ],
        "persistent": false
    },
    "permissions": [
        "activeTab",
        "cookies",
        "tabs",
        "alarms",
        "storage"
    ],
    "content_security_policy": "script-src 'self' https://*.linkedin.com/* https://www.gstatic.com/ https://*.firebaseio.com https://www.googleapis.com https://www.googletagmanager.com; object-src 'self'"
}