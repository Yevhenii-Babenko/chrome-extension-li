{
    "manifest_version": 2,
    "name": "Test background scripts works",
    "description": "This extension created for testing cbackground scripts works",
    "version": "1.0",
    "web_accessible_resources": [
        "*.png"
    ],
    "browser_action": {
        "default_icon": "icon.png",
        "default_popup": "popup.html"
    },
    "content_scripts": [
        {
            "matches": [
                "*://*.linkedin.com/*"
            ],
            "js": [
                "content/content.js",
                "lib/jquery.js"
            ]
        }
    ],
    "background": {
        "scripts": [
            "background/background.js",
            "background/background-state.js",
            "lib/jquery.js"
        ],
        "persistent": false
    },
    "permissions": [
        "activeTab",
        "cookies",
        "tabs",
        "alarms",
        "storage"
    ]
}